{# templates/goal/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}My Goals{% endblock %}
{% block body %}
  <h1>My Goals</h1>
  <a class="nav-link" href="{{ path('new_goal') }}">
    <button class="btn btn-primary">
      Add Goal
    </button>
  </a>
  {% if goals is empty %}
    <p> No goals to display </p>
  {% else %}
    <table>
      <tr>
	<th>Title</th>
	<th>Description</th>
	<th></th>
	<th></th>
      </tr>
      {% for goal in goals %}
	<tr class="table table-striped table-bordered">
          <td>{{ goal.title }}</td>
          <td>{{ goal.description }}</td>
                           <td><a href="{{ path('show_goal', {'id': goal.id}) }}" class="btn btn-primary btn-sm">View</a></td>
                            <td><a href="{{ path('edit_goal', {'id': goal.id}) }}" class="btn btn-secondary btn-sm">Edit</a></td>
			    <td><a href="{{ path('delete_goal', {'id': goal.id}) }}" class="btn btn-secondary btn-sm">Delete</a></td>
	  </tr>
        {% endfor %}
      </table>
    {% endif %}

{% endblock %}
