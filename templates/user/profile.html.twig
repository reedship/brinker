{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <h1>User Profile</h1>

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Zip</th>
            <td>{{ user.zip }}</td>
        </tr>
    </table>

    <a href="{{ path('edit_user') }}" class="btn btn-primary">Edit</a>
    <a href="{{ path('delete_user') }}" class="btn btn-danger">Delete and Logout</a>
{% endblock %}
